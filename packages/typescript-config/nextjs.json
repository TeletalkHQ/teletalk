{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"display": "NextJS",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"plugins": [
			{
				"name": "next"
			},
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"target": "ES2022",
		"types": ["mocha", "node"]
	}
}
