{
	"extends": "@repo/typescript-config/node.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@/*": ["test/*"],
			"#/*": ["public/*"],
			"~/*": ["src/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts", "test/**/*.ts", "./global.d.ts"]
}
