{
	"extends": "@repo/typescript-config/src/configs/node.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"#/*": ["public/*"],
			"@/*": ["testSrc/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": [
		"src/**/*.ts",
		"configs/**/*.ts",
		"./index.ts",
		"testSrc/**/*.ts",
		"configs/jest/jest.setup.ts",
		"src/types/global.d.ts"
	]
}
