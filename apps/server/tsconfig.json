{
	"extends": "@repo/typescript-config/node.json",
	"compilerOptions": {
		"baseUrl": "./",
		"declaration": true,
		"declarationMap": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"paths": {
			"@/*": ["test/*"],
			"#/*": ["public/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["**/*.js", "**/*.ts", "**/.*.js", "webpack.config.cjs"]
}
