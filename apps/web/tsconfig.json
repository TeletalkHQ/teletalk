{
	"extends": "@repo/typescript-config/src/configs/nextJS.json",
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"paths": {
			"@/*": ["testSrc/*"],
			"#/*": ["public/*"],
			"~/*": ["src/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es2016",
		"types": ["mocha"],
		"noEmit": true
	},
	"exclude": ["node_modules"],
	"include": ["src", "next-env.d.ts", "./src/types/global.d.ts"]
}
