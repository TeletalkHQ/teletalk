{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"globalEnv": [
		"COVERAGE",
		"NEXT_PUBLIC_CLIENT_BASE_URL",
		"NEXT_PUBLIC_LOG_LEVEL",
		"NEXT_PUBLIC_SERVER_BASE_URL",
		"NODE_ENV",
		"PORT",
		"SELF_EXEC",
		"USE_CLUSTER"
	],
	"tasks": {
		"build": {
			"env": [".env"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"check:lint": {},
		"check:lint:fix": {},
		"check:lint:fix:strict": {},
		"check:style": {},
		"check:types": {
			"cache": false
		},
		"check:types:watch": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"nest:build": {
			"cache": false
		},
		"nest:start:dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"start:dev": {
			"cache": false,
			"persistent": true
		},
		"start:dev:server": {
			"cache": false,
			"persistent": true
		},
		"start:dev:web": {
			"cache": false,
			"persistent": true
		},
		"start:production": {
			"cache": false
		},
		"test": {},
		"test:coverage": {},
		"test:dev": {
			"cache": false
		},
		"test:dev:coverage": {},
		"test:dev:watch": {
			"cache": false,
			"persistent": true
		}
	}
}
